%nav{role: 'navigation'}
  %ol.breadcrumb
    %li.breadcrumb-item= link_to t(:index, scope: :user), users_path
    %li.breadcrumb-item.active= @user.name.titleize

.row
  .col
    %h1.display-5= @user.name.titleize
  .col-md-auto
    .mt-2
    = link_to 'Send Message', conversations_path(conversation: { participant_id: @user.id }), method: :post, remote: true, class: 'btn btn btn-outline-success'

.mb-3

- if @user.user_groups.length > 0
  %h1.display-6 Groups
  = render partial: 'user_groups/table', locals: {user_groups: @user.user_groups}
