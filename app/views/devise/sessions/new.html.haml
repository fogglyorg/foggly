%h1.display-4
  Log in /
  = link_to 'Sign up', new_registration_path(resource_name)
= form_for resource, as: resource_name, url: session_path(resource_name) do |f|
  .form-group
    = f.email_field :email, autofocus: true, class: 'form-control form-control-lg', placeholder: 'Email'
  .form-group
    = f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg', placeholder: 'Password'
  - if devise_mapping.rememberable?
    .form-group
      = f.check_box :remember_me
      = f.label :remember_me
  .form-group
    = f.submit 'Log in', class: 'btn btn-lg btn-light'
    = link_to 'Forgot your password?', new_password_path(resource_name)
